@model RegisterFormModel

<form class="mb-3" asp-controller="Account" asp-action="Register" method="post" autocomplete="on">
    <div class="text-center">
        <h1 class="h3 mb-3 fw-normal">@Model.FormTitleText</h1>
    </div>

    <input asp-for="IsTrue" value="true" />
    <input asp-for="FormTitleText" />
    <input asp-for="SubmitButtonText" />

    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">First name</label>
        <input type="text" class="form-control" placeholder="First name" asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="LastName">Last name</label>
        <input type="text" class="form-control" placeholder="Last name" asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="DateOfBirth">Date of birth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth" />
        <span asp-validation-for="DateOfBirth"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Username">Username</label>
        <input type="text" class="form-control" placeholder="Username" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Email">Email address</label>
        <input type="email" class="form-control" placeholder="name@example.com" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Password">Password</label>
        <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
        <input type="password" class="form-control" placeholder="Confirm password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="AgreeWithTerms">
        <label class="form-check-label" asp-for="AgreeWithTerms">
            Agree with our <a target="_blank" href="/privacy">terms and conditions</a>
        </label>
        <br />
        <span asp-validation-for="AgreeWithTerms"></span>
    </div>

    @if (ViewBag.ErrorSavingData != null) 
    {
        <div>
            <span class="invalid-feedback">@ViewBag.ErrorSavingData</span>
        </div>
    }

    <button class="w-100 btn btn-lg btn-primary" type="submit">@Model.SubmitButtonText</button>
</form>