@model LoginFormModel

<form _lpchecked="1" asp-controller="Account" asp-action="Login" method="post" autocomplete="on">
    <img class="mb-4" src="https://getbootstrap.com/docs/5.0/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <input hidden asp-for="ReturnUrl" />

    <div class="form-floating">
        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="Email"
               style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
        <label for="floatingInput" asp-for="Email">Email address</label>
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-floating">
        <input type="password" class="form-control" id="floatingPassword" placeholder="Password" asp-for="Password"
               style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
        <label for="floatingPassword" asp-for="Password">Password</label>
        <span asp-validation-for="Password"></span>
    </div>

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" asp-for="RememberMe"> Remember me
        </label>
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
</form>